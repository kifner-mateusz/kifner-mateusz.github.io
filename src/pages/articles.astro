---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer/index.jsx";
import Nav from "../components/Nav/index.jsx";
import PortfolioPreview from "../components/PortfolioPreview/index.jsx";
import PlayIframe from "../components/PlayIframe.astro";

const articles = (await Astro.glob("./articles/**/*.md"))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort(
		(a, b) =>
			new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
---

<html lang="en">

<head>
	<MainHead title="All articles | Jeanine White" description="Learn about Jenine White" />
</head>

<body>
	<Nav />
	<div class="wrapper">
		<h1 class="title mt4 mb4">All articles</h1>
		<div class="grid">
			{articles.map((article) =>
			<PortfolioPreview article={article} />)}
		</div>
	</div>
	<Footer />
</body>

</html>

<style lang="scss">
	.grid {
		display: grid;
		grid-gap: 3rem;
	}
</style>